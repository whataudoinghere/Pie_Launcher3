<com.android.launcher3.qsb.AllAppsQsbView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center|top"
    android:id="@id/search_container_all_apps"
    android:background="@drawable/bg_qsb_click_feedback"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/qsb_widget_height"
    android:layout_centerHorizontal="true"
    android:contentDescription="@string/label_search"
    android:translationY="30.0dip">

    <ImageView
        android:layout_gravity="start|center"
        android:id="@id/g_icon"
        android:layout_width="@dimen/qsb_mic_width"
        android:layout_height="fill_parent"
        android:layout_marginTop="-6.0dip"
        android:layout_marginBottom="-6.0dip"
        android:src="@drawable/ic_super_g_color"
        android:scaleType="center" />

    <ImageView
        android:layout_gravity="end|center"
        android:id="@id/mic_icon"
        android:background="?android:selectableItemBackgroundBorderless"
        android:focusable="false"
        android:clickable="true"
        android:layout_width="@dimen/qsb_mic_width"
        android:layout_height="fill_parent"
        android:layout_marginTop="-6.0dip"
        android:layout_marginBottom="-6.0dip"
        android:src="@drawable/ic_poodle_color"
        android:scaleType="center"
        android:contentDescription="@string/label_voice_search" />

    <include layout="@layout/qsb_hint" />
</com.android.launcher3.qsb.AllAppsQsbView>
